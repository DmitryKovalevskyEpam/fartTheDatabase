<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="assistant">
        <createTable tableName="users" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createIndex indexName="idx_users_email" tableName="users" schemaName="public">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="2" author="assistant">
        <createTable tableName="card_info" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="holder" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="expiration_date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_card_user"
                                 baseTableName="card_info" baseColumnNames="user_id" baseSchemaName="public"
                                 referencedTableName="users" referencedColumnNames="id" referencedSchemaName="public"/>

        <createIndex indexName="idx_card_user_id" tableName="card_info" schemaName="public">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_card_number" tableName="card_info" schemaName="public">
            <column name="number"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>